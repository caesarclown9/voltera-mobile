<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Certificate Pinning Configuration -->

    <!-- Production API -->
    <!-- Certificate Pinning removed: Let's Encrypt auto-renews every 90 days -->
    <!-- Using system trust anchors instead for automatic certificate updates -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="false">ocpp.evpower.kg</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Debug configuration (only in debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user added CAs for debugging with proxies like Charles -->
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>

    <!-- Yandex Maps - allow all subdomains (API, tiles, static) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">yandex.ru</domain>
        <domain includeSubdomains="true">yandex.net</domain>
        <domain includeSubdomains="true">yandex.com</domain>
        <domain includeSubdomains="true">maps.yandex.ru</domain>
        <domain includeSubdomains="true">api-maps.yandex.ru</domain>
        <domain includeSubdomains="true">vec.maps.yandex.net</domain>
        <domain includeSubdomains="true">sat.maps.yandex.net</domain>
        <domain includeSubdomains="true">core-renderer-tiles.maps.yandex.net</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Supabase -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">supabase.co</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Default configuration for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>